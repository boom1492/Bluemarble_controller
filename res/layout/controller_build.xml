<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <CheckBox
            android:id="@+id/checkBox_villa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="별장"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/text_valuevilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/text_feevilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <CheckBox
            android:id="@+id/checkBox_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="빌딩"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/text_valuebuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/text_feebuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <CheckBox
            android:id="@+id/checkBox_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="호텔"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/text_valuehotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/text_feehotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_skipbuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="넘어가기" />

</LinearLayout>